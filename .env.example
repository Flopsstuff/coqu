# PostgreSQL
POSTGRES_USER=coqu
POSTGRES_PASSWORD=coqu_secret
POSTGRES_DB=coqu
# Optional: change the port if you want to use a different one
#POSTGRES_PORT=5432

# API / Prisma (used only in production via docker-compose.yml)
# For local dev, create packages/api/.env with:
# DATABASE_URL=postgresql://<POSTGRES_USER>:<POSTGRES_PASSWORD>@localhost:<POSTGRES_PORT>/<POSTGRES_DB>
DATABASE_URL=postgresql://coqu:coqu_secret@localhost:5432/coqu
API_PORT=4000
# JWT secret for auth tokens — change in production!
JWT_SECRET=change-me-in-production
# Secret for encrypting git tokens (PATs) — change in production!
GIT_TOKEN_SECRET=change-me-in-production
# Workspace root directory for cloned repos (default: /workspace in Docker)
WORKSPACE_PATH=/workspace

# Web
VITE_API_URL=http://localhost:4000

# Cloudflare Tunnel
# Create a tunnel: cloudflared tunnel create coqu
# Then paste the token here
CLOUDFLARE_TUNNEL_TOKEN=
