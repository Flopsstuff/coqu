{
  "name": "coqu",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "yarn workspace @coqu/api dev",
    "dev:web": "yarn workspace @coqu/web dev",
    "dev": "yarn db:up && yarn db:generate && yarn build:shared && yarn dev:api & yarn dev:web",
    "db:up": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "db:reset": "docker compose down -v postgres && echo 'Database volume removed'",
    "db:migrate": "yarn workspace @coqu/api prisma:migrate",
    "db:generate": "yarn workspace @coqu/api prisma:generate",
    "db:studio": "yarn workspace @coqu/api prisma:studio",
    "build:shared": "yarn workspace @coqu/shared build",
    "build:api": "yarn workspace @coqu/api build",
    "build:web": "yarn workspace @coqu/web build",
    "build": "yarn build:shared && yarn build:api && yarn build:web",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.11.0+sha512.4e54aeace9141df2f0177c266b05ec50dc044638157dae128c471ba65994ac802122d7ab35bcd9e81641228b7dcf24867d28e750e0bcae8a05277d600008ad54"
}
